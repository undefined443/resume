\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{cjk-fonts}[2025/01/19 v2.2 CJK fonts configuration with Noto fonts]

\RequirePackage{xeCJK}

% 设置 CJK 字体作为主要字体
% 思源宋体 (Noto Serif CJK SC) 作为主字体
% CJK = Chinese-Japanese-Korean，支持中日韩文字
\setCJKmainfont[
  BoldFont=NotoSerifCJKsc-Bold,
  ItalicFont=NotoSerifCJKsc-Regular,  % 思源宋体没有斜体，使用常规体
  SmallCapsFont=NotoSerifCJKsc-Medium
]{NotoSerifCJKsc-Regular}

% 思源黑体 (Noto Sans CJK SC) 作为无衬线字体
\setCJKsansfont{NotoSansCJKsc-Regular}

% 思源等宽字体使用思源黑体
\setCJKmonofont{NotoSansCJKsc-Regular}

% 定义更多字体系列，使用思源字体的不同变体
\setCJKfamilyfont{zhsong}{NotoSerifCJKsc-Regular}       % 宋体 -> 思源宋体
\setCJKfamilyfont{zhhei}{NotoSansCJKsc-Regular}        % 黑体 -> 思源黑体
\setCJKfamilyfont{zhhei}{NotoSansCJKsc-Bold}           % 黑体粗 -> 思源黑体粗体
\setCJKfamilyfont{zhfs}{NotoSansCJKsc-Regular}          % 仿宋 -> 思源黑体
\setCJKfamilyfont{zhkai}{NotoSerifCJKsc-Regular}        % 楷书 -> 思源宋体
\setCJKfamilyfont{zhkai}{NotoSerifCJKsc-Medium}         % 楷书粗 -> 思源宋体中等
\setCJKfamilyfont{zhli}{NotoSerifCJKsc-Regular}         % 隶书 -> 思源宋体
\setCJKfamilyfont{zhyou}{NotoSansCJKsc-Regular}         % 幼圆 -> 思源黑体

% 字体命令映射到 CJK 字体
\newcommand*{\songti}{\CJKfamily{zhsong}}    % 宋体 -> 思源宋体
\newcommand*{\heiti}{\CJKfamily{zhhei}}        % 黑体 -> 思源黑体
\newcommand*{\kaishu}{\CJKfamily{zhkai}}       % 楷书 -> 思源宋体
\newcommand*{\fangsong}{\CJKfamily{zhfs}}     % 仿宋 -> 思源黑体
\newcommand*{\lishu}{\CJKfamily{zhli}}        % 隶书 -> 思源宋体
\newcommand*{\youyuan}{\CJKfamily{zhyou}}     % 幼圆 -> 思源黑体

